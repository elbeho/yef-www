[%
 meet = { list => [], occurs => {} } ;
 BLOCK add_meet_item;
     item = { title => title, url => url, email => email, occurs => occurs, text => content };
     meet.list.push(item);
	
     UNLESS meet.occurs.exists(occurs); meet.occurs.$occurs = []; END;
     meet.occurs.$occurs.push(item);
 END
%]
[%# add new meeting time just below, in alphabetical order by group name %]

[% WRAPPER add_meet_item
   title = 'Amsterdam.pm'
   url   = 'http://amsterdam.pm.org/'
   email = 'monger@amsterdam.pm.org'
   occurs = 'Monthly'
%]
meets every first Tuesday of the month, even during Summer holidays. 
[% END %]

[% WRAPPER add_meet_item
   title = 'London.pm'
   url   = 'http://london.pm.org/meetings/'
   email = 'leader@london.pm.org'
   occurs = 'Monthly'
%]
meets the day <i>after</i> the first Wednesday of every month.
[% END %]

